<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginPage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Botoes"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasty Fast"
            android:textColor="@color/Branco"
            android:textSize="36sp" /> -->

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logoatualizada"/> -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLoginTitulo"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tasty Fast"
            android:textSize="45dp"
            android:textColor="@color/Amarelo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9sp"
            android:text="@string/login_apresentacao"
            android:textAlignment="center"
            android:textColor="@color/Branco"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/edtLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/Branco"
            android:textColorHint="@color/Branco"/>

        <EditText
            android:id="@+id/edtLoginSenha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:hint="Senha"
            android:textColorHint="@color/Branco"
            android:inputType="textPassword"
            android:textColor="@color/Branco" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLoginEsqueceu"
                android:text="Esqueceu a Senha?"
                android:textColor="@color/Branco"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="30dp"
                android:linksClickable="true"/>
        </RelativeLayout>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:id="@+id/btLoginEntrar"
            android:textColor="@color/Botoes"
            android:background="@color/Branco"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:fontFamily="serif"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLoginNaoPossuiConta"
                android:text="Ainda nÃ£o possui uma conta?"
                android:textColor="@color/Branco"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:linksClickable="true"/>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>